{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2015.promise"
    ],
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [
    "config/declarations.d.ts",
    "config/styled.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
